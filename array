import java.util.ArrayList;
import java.util.Arrays;
import java.util.List;

public class Fourthb {
    public static void main(String[] args) {
        // Create an ArrayList with color elements
        ArrayList<String> colors = new ArrayList<>(Arrays.asList(
            "Red", "Green", "Blue", "Yellow", "Black"
        ));

        System.out.println("Original ArrayList: " + colors);

        // Extract the 1st and 2nd elements (index 0 and 1)
        if (colors.size() >= 2) {
            List<String> subList = colors.subList(0, 2); // from index 0 to 2 (exclusive)
            System.out.println("Extracted Elements (1st and 2nd): " + subList);
        } else {
            System.out.println("Not enough elements to extract 1st and 2nd items.");
        }
    }
}
